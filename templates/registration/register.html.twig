{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	<div class="hearder">
<h2>Inscription</h2>
      </div>
	<div class="box">
	<div class="left-box">
<div class="titre">
        <h3>Infomation Générales</h3>
      </div>
	{{ form_start(registrationForm) }}
	

	{{ form_row(registrationForm.nom) }}
	{{ form_row(registrationForm.prenom) }}
	{{ form_row(registrationForm.email) }}
		{{ form_row(registrationForm.plainPassword,{
            label: 'Password'
        }) }}
		</div>
		<div class="right-box">
	<div class="titre">
        <h3>Contact Details</h3>
      </div>
	{{ form_row(registrationForm.adresse) }}
	{{ form_row(registrationForm.cp, {label: "Code Postal"}) }}
	{{ form_row(registrationForm.ville) }}
	{{ form_row(registrationForm.telephone) }}
	{{ form_row(registrationForm.agreeTerms, {label: "J'accepte les conditions générales du site"}) }}

	<button type="submit" class="btn">Enregistrer</button>
	{{ form_end(registrationForm) }}
	</div>
	</div>
{% endblock %}
